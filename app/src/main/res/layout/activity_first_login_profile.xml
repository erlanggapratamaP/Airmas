<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/tvJudul"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                tools:text="BANTU KAMI UNTUK MENEMUKAN ANDA"
                android:fontFamily="@font/telex"
                android:textColor="@color/colorPrimary"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="NAMA LENGKAP**"
                android:fontFamily="@font/telex"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="46dp"
                app:layout_constraintTop_toBottomOf="@+id/tvJudul"
                android:id="@+id/tvNama"/>

        <TextView
                android:text="@string/isilahnama"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:textStyle="italic"
                android:id="@+id/tvIstilah"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:textSize="10sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvNama"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toTopOf="@+id/et_name_firstlogin"
                android:fontFamily="@font/telex"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/et_name_firstlogin"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textSize="12sp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toTopOf="@+id/tvNamaPanggilan"
                android:fontFamily="@font/telex"
                app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:text="NAMA PANGGILAN**"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:id="@+id/tvNamaPanggilan"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                android:fontFamily="@font/telex"/>

        <TextView
                android:text="@string/isilahnamapanggilan"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="italic"
                android:id="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/et_nama_panggilan_firstlogin"
                android:fontFamily="@font/telex"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:text="Nama Panggilan"
                android:ems="10"
                android:id="@+id/et_nama_panggilan_firstlogin"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                android:fontFamily="@font/telex"
                app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:text="@string/alamat_lengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/telex"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/textView3"/>

        <TextView
                android:text="Jalan**"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="29dp"
                android:layout_marginStart="29dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/telex"
                android:textSize="12sp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/et_alamat_firstlogin"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/alamat"
                android:ems="10"
                android:id="@+id/et_alamat_firstlogin"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textSize="12sp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                android:fontFamily="@font/telex"/>

        <TextView
                android:text="Wilayah**"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="29dp"
                android:layout_marginStart="29dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                android:fontFamily="@font/telex"/>

        <TextView
                android:text="@string/isilahwilayah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:id="@+id/textView6"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/textView7"
                android:fontFamily="@font/telex"/>

        <TextView
                android:text="Provinsi**"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/sp_provinsi"
                android:fontFamily="@font/telex"/>

        <TextView
                android:text="Kabupaten/Kota**"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:id="@+id/textView8"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/sp_kabupaten"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:fontFamily="@font/telex"/>

        <TextView
                android:text="Kelurahan/Desa**"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="13dp"
                app:layout_constraintBottom_toTopOf="@+id/sp_keluarahan"
                android:fontFamily="@font/telex"/>

        <TextView
                android:text="Kecamatan**"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/sp_kecamatan"
                android:fontFamily="@font/telex"/>

        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:id="@+id/sp_kabupaten"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintStart_toEndOf="@+id/sp_provinsi"
                android:layout_marginLeft="166dp"
                android:layout_marginStart="166dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/textView9"/>

        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:id="@+id/sp_keluarahan"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintStart_toEndOf="@+id/sp_provinsi"
                android:layout_marginLeft="166dp"
                android:layout_marginStart="166dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="43dp"
                app:layout_constraintBottom_toTopOf="@+id/textView12"/>

        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:id="@+id/sp_provinsi"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/textView10"/>

        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:id="@+id/sp_kecamatan"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toTopOf="@+id/textView11"/>

        <TextView
                android:text="Patokan*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="29dp"
                android:layout_marginStart="29dp"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/telex"
                android:layout_marginBottom="11dp"
                app:layout_constraintBottom_toTopOf="@+id/textView12"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:text="@string/isilahpatokan"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/et_patokan_firstlogin"
                android:fontFamily="@font/telex"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Patokan"
                android:ems="10"
                android:id="@+id/et_patokan_firstlogin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:textSize="12sp"
                android:fontFamily="@font/telex"
                android:layout_marginBottom="22dp"
                app:layout_constraintBottom_toTopOf="@+id/textView13"/>

        <TextView
                android:text="EMAIL (jika ada)*"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:id="@+id/textView13"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/et_email_firstlogin"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/telex"/>

        <TextView
                android:text="**Wajib Di isi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:textStyle="italic"
                android:textSize="10sp"
                android:fontFamily="@font/telex"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toTopOf="@+id/textView15"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Email"
                android:ems="10"
                android:id="@+id/et_email_firstlogin"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/telex"
                android:textSize="12sp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/textView14"/>

        <TextView
                android:text="*Tidak wajib untuk di isi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:textStyle="italic"
                android:fontFamily="@font/telex"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="84dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_konfirmasi_firstlogin"/>

        <TextView
                android:text="@string/checkboxtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/textView16"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/cb_setuju_firstlogin"
                android:layout_marginBottom="40dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_konfirmasi_firstlogin"/>

        <CheckBox
                android:layout_width="33dp"
                android:layout_height="21dp"
                android:id="@+id/cb_setuju_firstlogin"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="65dp"/>

        <Button
                android:text="Konfirmasi"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/btn_konfirmasi_firstlogin"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/bg_btn_konfirmasi"
                android:textColor="@android:color/white"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>




</ScrollView>
