<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimaryDark"
        tools:context=".HomeOrderFragment">

    <ImageView
            android:layout_width="140dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/logo_home_atas"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            />

    <TextView
            android:text="Online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="italic"
            android:typeface="normal"
            android:fontFamily="@font/telex"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <TextView
            android:text="Terkoneksi dengan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:typeface="normal"
            android:fontFamily="@font/telex"
            android:id="@+id/textView17"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="Depon Tambun 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gold"
            android:textSize="16sp"
            android:typeface="normal"
            android:fontFamily="@font/telex"
            android:id="@+id/tv_terkoneksi_homeorder"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            />

    <ImageView
            android:src="@drawable/homeorder_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="77dp"
            app:layout_constraintBottom_toTopOf="@+id/iB_beli"/>

    <TextView
            android:text="Nama jalan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_jalan_homeorder"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/telex"/>

    <Button
            android:text="PESAN"
            android:background="@drawable/btn_emas"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:id="@+id/btn_pesan_homeorder"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@+id/iB_beli"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            app:layout_constraintEnd_toStartOf="@+id/iB_cek"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>

    <ImageButton
            android:src="@drawable/beli_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/iB_beli"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/textView19"/>

    <ImageButton
            android:src="@drawable/cekdepot_bg"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iB_cek"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            app:layout_constraintBottom_toTopOf="@+id/textView21"
            android:layout_marginBottom="4dp"/>

    <TextView
            android:text="Beli Langsung"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/textView19"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/gold"
            android:fontFamily="@font/telex"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="137dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="Cek depot"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:id="@+id/textView21"
            android:fontFamily="@font/telex"
            android:textColor="@color/gold"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="137dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>