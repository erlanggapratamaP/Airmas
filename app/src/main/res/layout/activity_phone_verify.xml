<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".PhoneVerify">
	<ImageView
			android:layout_width="240dp"
			android:layout_height="121dp"
			app:srcCompat="@drawable/logoairmastype"
			android:id="@+id/imageView2"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp"
			android:layout_marginRight="16dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"
			android:layout_marginTop="120dp"
			android:layout_marginBottom="15dp"
			app:layout_constraintBottom_toTopOf="@+id/linearLayout5"/>

	<LinearLayout
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp"
			android:id="@+id/linearLayout5"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp"
			android:layout_marginRight="16dp"
			app:layout_constraintHorizontal_bias="0.0"
			android:layout_marginTop="1dp"
			app:layout_constraintTop_toBottomOf="@+id/imageView2">

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Masukan kode Verifikasi"
				android:layout_gravity="center"
				android:fontFamily="@font/telex"
				android:textColor="@color/colorPrimary"/>

		<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="40dp"
				android:id="@+id/edt_verifikasi"
				android:textColorLink="@color/colorPrimary"
				android:textAlignment="center"
				android:fontFamily="@font/telex"
				android:textColorHint="@color/colorPrimary"
				android:textColorHighlight="@color/colorPrimary"
				android:textColor="@color/colorPrimary"
				android:inputType="number"/>

		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/btn_konfirmasi"
				android:layout_gravity="center"
				android:background="@drawable/konfirm"/>

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/kodeReset"
				android:layout_marginTop="20dp"
				android:textColor="@color/colorPrimary"
				android:fontFamily="@font/telex"
				android:text="kode akan di reset dalam"
				android:layout_gravity="center"/>
	</LinearLayout>
</android.support.constraint.ConstraintLayout>